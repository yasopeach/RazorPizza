@page
@model RazorPizza.Pages.Forms.CustomPizzaModel
@{
    ViewData["Title"] = "Create Pizza";
}

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            <h1 class="text-danger">Create Your Own Pizza</h1>
            <form class="" method="post">
                <div class="">
                    <div>
                    <label class="mt-3">Name Your Pizza</label>
                    </div>
                    <input asp-for="@Model.Pizza.Name"/>
                </div>
                <div class="mt-4">
                    <label>Add Extra</label>
                </div>
                <div class="">
                    <div class="">
                        <input asp-for="@Model.Pizza.Sauce"/> Sauce
                    </div>
                    <div class="">
                        <input asp-for="@Model.Pizza.Cheese"/> Cheese
                    </div>
                    <div class="">
                        <input asp-for="@Model.Pizza.Pepperoni"/> Pepperoni
                    </div>
                    <div class="">
                        <input asp-for="@Model.Pizza.Mushroom"/> Mushroom
                    </div>
                    <div class="">
                        <input asp-for="@Model.Pizza.Tuna"/> Tuna
                    </div>
                    <div class="">
                        <input asp-for="@Model.Pizza.Pineapple"/> Pinapple
                    </div>
                    <div class="">
                        <input asp-for="@Model.Pizza.Ham"/> Ham
                    </div>
                    <div class="">
                        <input asp-for="@Model.Pizza.Beef"/> Beef   
                    </div>
                    <div class="m-3 text-center">
                        <button href="/Checkout" class="btn btn-danger" type="submit">Let's Order</button>
                    </div>
                </div>
            </form>


        </div>
        <div class="col-3"></div>
    </div>
</div>
